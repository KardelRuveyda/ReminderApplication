<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Uygulama">
        <EditTextPreference
            android:key="kullaniciAdi"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Lütfen kullanıcı adınızı giriniz"
            android:title="Kullanıcı Adı" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:icon="@drawable/resim"
            android:key="bildirim"
            android:title="Bildirim İzni" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/listArray"
            android:entryValues="@array/listValues"
            android:key="yedekleme"
            android:title="Yedekleme Sıklığı" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Güvenlik">

        <SwitchPreference
        android:defaultValue="false"
        android:key="profilGuvenlik"
        android:title="Profili Gizle" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Ekran">
        android:layout_height="match_parent">

        <SwitchPreference
            android:defaultValue="false"
            android:key="darkMode"
            android:title="Gece Modu" />

    </PreferenceCategory>
</PreferenceScreen>